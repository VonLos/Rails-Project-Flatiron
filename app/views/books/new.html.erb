<%= form_for(@book) do |f| %>
    <%= f.label :title, "Title:" %>
    <%= f.text_field :title %><br>
    <%= f.label :author, "Author:" %>
    <%= f.text_field :author %><br>
    <%= f.label :complete, "Completed:" %>
    <%= f.check_box :completed %> <br />
    <%= f.fields_for :category do |c|%>
        <%= c.label :name, "Category:" %>
        <%= c.text_field :name %>
    <% end %>
<%= f.submit  %>
<%end%>